{
    "id": "co.moodo",
    "sdk": 2,
    "brandColor": "#221436",
    "name": {
        "en": "Moodo"
    },
    "description": {
        "en": "Integrate Moodo into Homey"
     },
    "category": [
        "tools",
        "appliances"
    ],
	"version": "1.0.0",
    "compatibility": ">=2.1.2",
    "tags": {
        "en": [
            "Moodo",
            "Air",
            "Scent",
            "Fan"
        ]
     },
    "images": {
        "small": "/assets/images/small.png",
        "large": "/assets/images/large.png"
    },
    "author": {
        "name": "Gerard Ricart",
        "email": "gerard.ricart@gmail.com"
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "XattSPT"
            }
        }
    },
    "capabilities": {
        "mode_interval": {
            "type": "enum",
            "title": {
                "en": "Interval Mode"
            },
            "getable": true,
            "setable": true,
            "uiComponent": "picker",
            "uiQuickAction": true,
            "values": [
                {
                  "id": "off",
                  "title": {
                    "en": "Off"
                  }
                },
                {
                  "id": "econ",
                  "title": {
                    "en": "Econ Mode"
                   }
                },
                {
                  "id": "efficient",
                  "title": {
                    "en": "Efficent Mode"
                  }
                },
                {
                    "id": "powerfull",
                    "title": {
                      "en": "Powerfull Mode"
                    }
                }
            ]
        },
        "shuffle": {
          "type": "boolean",
          "title": {
            "en": "Shuffle"
          },
          "getable": true,
          "setable": true,
          "uiComponent": "toggle",
          "uiQuickAction": true,
          "icon": "/assets/shuffle.svg"
        }
    },
    "drivers": [
        {
            "id": "moodo",
            "name": {
                "en": "Moodo"
            },
            "images": {
                "small": "drivers/melcloud/assets/images/small.png",
                "large": "drivers/melcloud/assets/images/large.png"
            },
            "class": "fan",
            "capabilities": [
                "onoff",
                "mode_interval",
                "dim",
                "shuffle"  
            ],
            "pair": [
                {
                    "id": "start",
                    "template": "login_credentials",
                    "options":{
                        "logo":"pair-logo.png",
                        "usernameLabel":"Moodo account",
                        "usernamePlaceholder":"user@domain.com",
                        "passwordLabel":"Password",
                        "passwordPlaceholder":"P4ssw0rd"
                      }
                },
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        }
    ]
}
